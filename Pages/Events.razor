@page "/events1"
@using EventEaseApp.Models
@using EventEaseApp.Components

<h3>Upcoming Events</h3>

@foreach (var ev in events)
{
    <EventCard EventName="@ev.EventName"
               EventDate="@ev.EventDate"
               Location="@ev.Location" />
}

