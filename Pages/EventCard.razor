@page "/events"
@using EventEaseApp.Models

<div class="container mt-5">
    <h3 class="text-primary mb-4">Upcoming Events</h3>
    <div class="row">
        @foreach (var ev in events)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@ev.EventName</h5>
                        <p class="card-text">
                            <strong>Date:</strong> @ev.EventDate.ToShortDateString()<br />
                            <strong>Location:</strong> @ev.Location
                        </p>
                        <NavLink class="btn btn-outline-primary me-2" href="@($"/events/details/{Uri.EscapeDataString(ev.EventName)}")">View Details</NavLink>
                        <NavLink class="btn btn-primary" href="@($"/events/register/{Uri.EscapeDataString(ev.EventName)}")">Register</NavLink>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private List<EventModel> events = new()
    {
        new EventModel { EventName = "Tech Conference 2025", EventDate = new DateTime(2025, 11, 5), Location = "London, UK" },
        new EventModel { EventName = "Startup Meetup", EventDate = new DateTime(2025, 12, 12), Location = "Manchester, UK" },
        new EventModel { EventName = "AI Expo", EventDate = new DateTime(2026, 1, 20), Location = "Birmingham, UK" }
    };
}
